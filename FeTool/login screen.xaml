            </Grid.ColumnDefinitions>
        </Grid>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="User" Height="16" Margin="311,148,458.333,190" Width="24" RenderTransformOrigin="-1.925,0.612">
