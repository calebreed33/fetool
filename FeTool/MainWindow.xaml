<Window
    x:Class="FeTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeTool"
        mc:Ignorable="d"
        Title="FeToolv0.0" Height="500" Width="800" Background="White">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*" />
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="515*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="173*" />
            <RowDefinition Height="139*" />
            <RowDefinition Height="22" />
            <RowDefinition Height="22" />
            <RowDefinition Height="88*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0.667,0,138.667" Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>


            <Button Grid.Column="0" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Top" Content="Import Baseline" Background="#FFE5E5E5"></Button>
            <Button Grid.Column="1" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Top" Content="Import Test" Background="#FFE5E5E5"></Button>

            <ComboBox Grid.Row="1" SelectionChanged="ComboBox_SelectionChanged" BorderBrush="#FF707070">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFE5E5E5" Offset="0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem IsSelected="True">Baseline #1</ComboBoxItem>
                <ComboBoxItem>Baseline #2</ComboBoxItem>
                <ComboBoxItem>Baseline #3</ComboBoxItem>
            </ComboBox>

            <ComboBox Grid.Row="1" Grid.Column="1" SelectionChanged="ComboBox_SelectionChanged_1" BorderBrush="#FF707070">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFE5E5E5" Offset="0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem IsSelected="True">Test #1</ComboBoxItem>
                <ComboBoxItem>Test #2</ComboBoxItem>
                <ComboBoxItem>Test #3</ComboBoxItem>
            </ComboBox>

            <Label Content="Filter" VerticalAlignment="Top" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  Grid.Row="2"></Label>

            <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" Text="Search Bar Placeholder" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

        </Grid>


        <ComboBox Grid.Row="2" Height="25" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="0,0.667,0,0" BorderBrush="#FF707070" >
            <ComboBoxItem IsSelected="True">STIG 1</ComboBoxItem>
            <ComboBoxItem>STIG 2</ComboBoxItem>
            <ComboBoxItem>STIG 3</ComboBoxItem>
            <ComboBoxItem>STIG 4</ComboBoxItem>
            <ComboBoxItem>STIG 5</ComboBoxItem>
            <ComboBoxItem>STIG 6</ComboBoxItem>
            <ComboBoxItem>STIG 7</ComboBoxItem>
            <ComboBoxItem>STIG 8</ComboBoxItem>
            <ComboBoxItem>STIG 9</ComboBoxItem>
            <ComboBoxItem>STIG 10</ComboBoxItem>
        </ComboBox>


        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" HorizontalAlignment="Right" Grid.RowSpan="4" Grid.Column="2" Margin="0,0.667,0,-0.333">
            ...
        </ScrollViewer>

        <!-- Command="Logout" -->
        <ToolBar ToolBarTray.IsLocked="True" Grid.ColumnSpan="4" MaxHeight="45" VerticalAlignment="Top" Background="#FFE5E5E5" Margin="-5,-1,-12.666,0" Height="23">
            <Button  Content="File" Padding="15,0,10,0" />
            <Button  Content="Home" Padding="10,0,10,0" />
            <Button  Content="Export" Padding="10,0,10,0" />
            <Button  Content="View" Padding="10,0,10,0" />
            <Button  Content="Manage" Padding="10,0,10,0" />
            <Button  Content="Logout" Padding="10,0,10,0" />
        </ToolBar>

        <!-- Upper-right Expander info field-->
        <StackPanel HorizontalAlignment="Left" Height="335" VerticalAlignment="Top" Width="515" Margin="42.333,22,0,0" Grid.RowSpan="4" Background="White" Grid.Column="2" Grid.ColumnSpan="2">
            <ListBox SelectedIndex="1">
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Expander Header="Test 1" Background="White">
                        <ScrollViewer>
                            <ListBox>
                                <ListBoxItem Content="Unit 1" />
                                <ListBoxItem Content="Unit 2" />
                            </ListBox>
                        </ScrollViewer>
                    </Expander>
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Expander Header="Test 2" Background="White">
                        <ScrollViewer>
                            <ListBox>
                                <ListBoxItem Content="Unit 1" />
                                <ListBoxItem Content="Unit 2" />
                            </ListBox>
                        </ScrollViewer>
                    </Expander>
                </ListBoxItem>
            </ListBox>
        </StackPanel>

        <!-- Status Box -->
        <Button Content="Edit" HorizontalAlignment="left" Height="25" VerticalAlignment="Top"  Width="65" Background="#FFDCD5D5" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="42.333,0.333,0,0" Grid.RowSpan="2" />
        <Button Content="History" HorizontalAlignment="left" Height="25" VerticalAlignment="Top"  Width="65" Background="#FFDCD5D5" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Margin="42.333,0.333,0,0" Grid.RowSpan="2" />
        <ScrollViewer HorizontalAlignment="Right" Height="150" VerticalAlignment="bottom" Width="450" Grid.RowSpan="4" MinHeight="100" Background="#FFDCD5D5" Grid.Column="3" Grid.Row="2" Margin="0,0,0.334,-0.333">
            <TextBox></TextBox>
        </ScrollViewer>

    </Grid>
</Window>